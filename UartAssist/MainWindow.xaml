<cc:WindowEx
    x:Class="UartAssist.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cc="clr-namespace:MyCustomControlLib;assembly=MyCustomControlLib"
    xmlns:cvt="clr-namespace:UartAssist.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UartAssist"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:theme="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2"
    Title="串口调试助手"
    Width="850"
    Height="580"
    Icon="{StaticResource DiIcon}"
    Loaded="WindowEx_Loaded"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <cc:WindowEx.Resources>
        <cvt:EnableToVisibilityConverter x:Key="EnableToVisibilityConverter" />
        <StackPanel
            x:Key="SpBtnCanOpen"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <ContentControl Margin="6,6,10,6" Content="{StaticResource ImgNoSun}" />
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="打开" />
        </StackPanel>
        <StackPanel
            x:Key="SpBtnCanClose"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <ContentControl Margin="3,2,10,2" Content="{StaticResource ImgSun}" />
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="关闭" />
        </StackPanel>
    </cc:WindowEx.Resources>
    <cc:WindowEx.Menu>
        <Grid Margin="15,0,10,10" Background="#F0F0F0">
            <Border
                Background="#F0F0F0"
                BorderBrush="#A0A0A0"
                BorderThickness="1">
                <!--  如果使用Effect属性，需要注意，他的子项目中的文字，可能会变得模糊  -->
                <Border.Effect>
                    <DropShadowEffect
                        Direction="-45"
                        Opacity="0.6"
                        ShadowDepth="4"
                        Color="Black" />
                </Border.Effect>
            </Border>
            <Grid
                Width="Auto"
                Height="Auto"
                Margin="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Offset="0" Color="#BBEAFA" />
                            <GradientStop Offset="1" Color="#0EB3EE" />
                        </LinearGradientBrush>
                    </Grid.Background>
                </Grid>
                <Grid Grid.Column="1">
                    <StackPanel Orientation="Vertical">
                        <MenuItem Background="Blue" Header="新建会话">
                            <MenuItem Header="Language" />
                            <MenuItem Header="选项">
                                <MenuItem Header="Language" />
                                <MenuItem Header="选项" />
                            </MenuItem>
                        </MenuItem>
                        <Separator Style="{StaticResource MenuSeparator}" />
                        <MenuItem Header="Language">
                            <MenuItem Header="Language" />
                            <MenuItem Header="选项" />
                        </MenuItem>
                        <Separator Style="{StaticResource MenuSeparator}" />
                        <MenuItem Header="选项" />
                        <MenuItem Header="工具" />
                        <Separator Style="{StaticResource MenuSeparator}" />
                        <MenuItem Header="帮助" />
                        <Separator Style="{StaticResource MenuSeparator}" />
                        <MenuItem Header="退出" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </cc:WindowEx.Menu>
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="1,5,1,0">
            <DockPanel LastChildFill="True">
                <Expander
                    DockPanel.Dock="Left"
                    ExpandDirection="Left"
                    IsExpanded="True"
                    Style="{DynamicResource ExpanderStyle1}">
                    <Expander.Resources>
                        <Style TargetType="Label">
                            <Setter Property="Height" Value="24" />
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="Margin" Value="5,0,0,0" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                        </Style>
                        <Style TargetType="CheckBox">
                            <Setter Property="Height" Value="24" />
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                        </Style>
                        <Style TargetType="RadioButton">
                            <Setter Property="Height" Value="24" />
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                        </Style>
                        <Style x:Key="BlueHyperlink" TargetType="Hyperlink">
                            <Setter Property="Foreground" Value="Blue" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="Red" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Expander.Resources>
                    <Grid Width="146">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <GroupBox
                            Margin="5,0,5,0"
                            BorderBrush="#A0A0A0"
                            Header="串口设置">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Content="串口号" />
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Content="波特率" />
                                <Label
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Content="校验位" />
                                <Label
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    Content="数据位" />
                                <Label
                                    Grid.Row="4"
                                    Grid.Column="0"
                                    Content="停止位" />
                                <Label
                                    Grid.Row="5"
                                    Grid.Column="0"
                                    Content="控制流" />
                                <ComboBox
                                    Name="CbSerialPorts"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    DropDownOpened="CbSerialPorts_DropDownOpened"
                                    IsEditable="True"
                                    ItemsSource="{Binding Path=SerialPortNames}"
                                    SelectedIndex="0">
                                    <!--<ComboBox.Items>
                                        <TextBlock Text="123456123456" />
                                        <TextBlock Text="123456123456" />
                                        <TextBlock Text="123456" />
                                        <TextBlock Text="123456" />
                                        <TextBlock Text="123456" />
                                        <TextBlock Text="123456" />
                                        <TextBlock Text="123456" />
                                        <TextBlock Text="123456" />
                                        <TextBlock Text="123456" />
                                        <TextBlock Text="123456" />
                                        <TextBlock Text="123456" />
                                        <TextBlock Text="123456" />
                                        <TextBlock Text="123456" />
                                        <TextBlock Text="123456" />
                                        <TextBlock Text="123456" />
                                        <TextBlock Text="123456" />
                                        <TextBlock Text="123456" />
                                        <TextBlock Text="123456" />
                                        <TextBlock Text="123456" />
                                        <TextBlock Text="123456" />
                                        <TextBlock Text="123456" />
                                        <TextBlock Text="123456" />
                                        <TextBlock Text="123456" />
                                        <TextBlock Text="123456" />
                                        <TextBlock Text="123456" />
                                        <TextBlock Text="123456" />
                                        <TextBlock Text="123456" />
                                        <TextBlock Text="123456" />
                                        <TextBlock Text="123456" />
                                        <TextBlock Text="123456" />
                                        <TextBlock Text="123456" />
                                        <TextBlock Text="123456" />
                                        <TextBlock Text="123456" />
                                        <TextBlock Text="123456" />
                                    </ComboBox.Items>-->
                                </ComboBox>
                                <ComboBox
                                    Name="CbBaudRate"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    IsEditable="True"
                                    IsEnabled="{Binding Path=IsEnabled, ElementName=CbSerialPorts}" />
                                <ComboBox
                                    Name="CbParity"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    IsEnabled="{Binding Path=IsEnabled, ElementName=CbSerialPorts}"
                                    SelectedIndex="0">
                                    <!--<ComboBox.Items>
                                        <TextBlock Text="123456123456" />
                                        <TextBlock Text="223456123456" />
                                        <TextBlock Text="323456123456" />
                                        <TextBlock Text="423456123456" />
                                        <TextBlock Text="523456123456" />
                                    </ComboBox.Items>-->
                                </ComboBox>
                                <ComboBox
                                    Name="CbDataBits"
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    IsEnabled="{Binding Path=IsEnabled, ElementName=CbSerialPorts}" />
                                <ComboBox
                                    Name="CbStopBits"
                                    Grid.Row="4"
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    IsEnabled="{Binding Path=IsEnabled, ElementName=CbSerialPorts}" />
                                <ComboBox
                                    Name="CbHandshake"
                                    Grid.Row="5"
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    IsEnabled="{Binding Path=IsEnabled, ElementName=CbSerialPorts}" />
                                <Button
                                    Name="BtnOpen"
                                    Grid.Row="6"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    Height="28"
                                    Margin="3,0,0,0"
                                    Click="BtnOpen_Click"
                                    Content="{StaticResource SpBtnCanOpen}" />
                            </Grid>
                        </GroupBox>
                        <GroupBox
                            Grid.Row="1"
                            Margin="5,0,5,0"
                            BorderBrush="Gray"
                            Header="接收设置">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <RadioButton
                                        Name="RbRxAscii"
                                        Content="ASCII"
                                        IsChecked="True" />
                                    <RadioButton
                                        Name="RbRxHex"
                                        Margin="10,0,0,0"
                                        Content="HEX" />
                                </StackPanel>
                                <CheckBox
                                    Name="CbRxLogModel"
                                    Content="按日志模式显示"
                                    IsChecked="True" />
                                <CheckBox
                                    Name="CbRxAutoReturn"
                                    Content="接收区自动换行"
                                    IsChecked="True" />
                                <CheckBox Name="CbRxShowData" Content="接收数据不显示" />
                                <CheckBox
                                    Name="CbRxSaveToFile"
                                    Checked="CbRxSaveToFile_Checked"
                                    Content="接收保存到文件..." />
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        Name="CbAutoScrollToEnd"
                                        Margin="2,0,0,0"
                                        Content="自动滚屏"
                                        IsChecked="True"
                                        Style="{StaticResource HyperlinkCheckBoxStyle}" />
                                    <TextBlock Margin="12,0,0,0"><Hyperlink
                                            Name="HlClearRxData"
                                            Click="ClearRxData_Click"
                                            Style="{StaticResource BlueHyperlink}">
                                            清除接收
                                        </Hyperlink></TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                        <Border
                            Grid.Row="2"
                            Margin="5,8,5,0"
                            Padding="8"
                            BorderBrush="#B1B1B1"
                            BorderThickness="1">
                            <Border.Resources>
                                <Style BasedOn="{StaticResource BlueHyperlink}" TargetType="Hyperlink">
                                    <Setter Property="Foreground" Value="Black" />
                                </Style>
                            </Border.Resources>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Height="20"
                                    Margin="0,0,0,0"><Hyperlink>自动应答</Hyperlink></TextBlock>
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Height="20"
                                    Margin="0,0,0,0"><Hyperlink>批量发送</Hyperlink></TextBlock>
                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Height="20"
                                    Margin="0,0,0,0"><Hyperlink>ASCII/表</Hyperlink></TextBlock>
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Height="20"
                                    Margin="0,0,0,0"><Hyperlink>界面主题</Hyperlink></TextBlock>
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Height="20"
                                    Margin="0,0,0,0"><Hyperlink>分包设置</Hyperlink></TextBlock>
                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Height="20"
                                    Margin="0,0,0,0"><Hyperlink>点赞打赏</Hyperlink></TextBlock>
                            </Grid>
                        </Border>
                        <GroupBox
                            Grid.Row="3"
                            Margin="5,0,5,0"
                            BorderBrush="Gray"
                            Header="发送设置">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <RadioButton
                                        Name="RbTxAscii"
                                        Checked="TxAsciiHexTransform_Checked"
                                        Content="ASCII"
                                        IsChecked="True" />
                                    <RadioButton
                                        Name="RbTxHex"
                                        Margin="10,0,0,0"
                                        Checked="TxAsciiHexTransform_Checked"
                                        Content="HEX" />
                                    <Popup Name="PopHexErrInfo" StaysOpen="False" Placement="Bottom" AllowsTransparency="True" PlacementTarget="{Binding ElementName=RbTxHex}">
                                        <StackPanel Orientation="Vertical" Margin="30,0,0,0" Background="Transparent">
                                            <Path Panel.ZIndex="1" Width="20" Height="12" HorizontalAlignment="Left" Fill="White" Margin="0,0,0,-2.4" Stretch="Uniform" Stroke="Red" Grid.Row="0" Data="M240,144.87111 L280,105 320,145"/>
                                            <Border Grid.Row="1" Margin="-30,0,0,0" Background="White" BorderBrush="Red" BorderThickness="1" Padding="10" CornerRadius="4">
                                                <TextBlock Text="当前是16进制模式，只能输入16进制字符"/>
                                            </Border>
                                        </StackPanel>
                                    </Popup>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Content="转义符指令解析" />
                                    <Button
                                        Width="12"
                                        Height="12"
                                        Margin="5,0,0,0"
                                        Content="{StaticResource ImgAck}"
                                        Style="{StaticResource NoBorderButtonStyle}" />
                                </StackPanel>
                                <CheckBox
                                    x:Name="CbAdditional"
                                    Checked="CbAdditional_Checked"
                                    Content="自动发送附加位" />
                                <CheckBox
                                    x:Name="CbTxSendFromFile"
                                    Click="CbTxSendFromFile_Click"
                                    Content="打开文件数据源..." />
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox x:Name="CbCircleTime" Content="循环周期" />
                                    <TextBox
                                        x:Name="TbCircleTime"
                                        Width="35"
                                        Height="18"
                                        Padding="0"
                                        VerticalAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Text="1000" />
                                    <TextBlock VerticalAlignment="Center" Text="ms" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Margin="2,0,0,0">
                                        <Hyperlink Style="{StaticResource BlueHyperlink}">
                                            快捷指令
                                        </Hyperlink></TextBlock>
                                    <TextBlock Margin="12,0,0,0">
                                        <Hyperlink Style="{StaticResource BlueHyperlink}">
                                            历史发送
                                        </Hyperlink></TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                    </Grid>
                </Expander>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition MinHeight="60" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="120" MinHeight="60" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <TabControl>
                            <TabItem Header="数据接收">
                                <DockPanel Margin="4">
                                    <RichTextBox Name="RtbRxData" VerticalScrollBarVisibility="Visible">
                                        <RichTextBox.Document>
                                            <FlowDocument>
                                                <Paragraph Name="PgRxData" />
                                            </FlowDocument>
                                        </RichTextBox.Document>
                                    </RichTextBox>
                                    <TextBox VerticalScrollBarVisibility="Visible" />
                                </DockPanel>
                            </TabItem>
                        </TabControl>
                        <StackPanel
                            Margin="0,0,5,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Orientation="Horizontal">
                            <TextBlock VerticalAlignment="Bottom"><Hyperlink
                                    Click="Hyperlink_Click"
                                    FontSize="12.5"
                                    FontWeight="Bold"
                                    Foreground="#FD7418">
                                    UartAssist V5.0.2
                                </Hyperlink></TextBlock>
                            <Button
                                Width="18"
                                Height="18"
                                Margin="2,0,2,0"
                                Content="{StaticResource ImgZuanShi}"
                                Style="{StaticResource NoBorderButtonStyle}" />
                            <Button
                                Width="18"
                                Height="18"
                                Margin="2,0,2,0"
                                Content="{StaticResource ImgLingdang}"
                                Style="{StaticResource NoBorderButtonStyle}" />
                        </StackPanel>
                    </Grid>
                    <GridSplitter
                        Grid.Row="1"
                        Height="5"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Background="#DFDFDF"
                        ShowsPreview="False" />
                    <Grid Grid.Row="2" MinHeight="60">
                        <TabControl>
                            <TabItem Header="数据发送">
                                <DockPanel Margin="4">
                                    <Button
                                        Name="BtnSend"
                                        Width="70"
                                        Margin="1,0,0,0"
                                        Click="BtnSend_Click"
                                        Content="发送"
                                        DockPanel.Dock="Right"
                                        FontWeight="Bold"
                                        Foreground="Green" />
                                    <TextBox
                                        Name="TbTxData"
                                        Padding="1"
                                        AcceptsReturn="True"
                                        AllowDrop="True"
                                        Text="Welcome To WPF"
                                        TextChanged="TbTxData_TextChanged" />
                                </DockPanel>
                            </TabItem>
                        </TabControl>
                        <StackPanel
                            Margin="0,0,5,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Orientation="Horizontal">
                            <Button
                                Name="BtnClearTxData"
                                Width="60"
                                Height="20"
                                Margin="2,0,2,0"
                                Click="ClearTxData_Click"
                                IsEnabled="{Binding Path=IsEnabled, ElementName=TbTxData}"
                                Style="{StaticResource NoBorderButtonStyle}">
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <ContentControl
                                        Margin="3"
                                        Content="{StaticResource ImgJtDown}"
                                        Visibility="{Binding Path=IsEnabled, ElementName=BtnClearTxData, Converter={StaticResource EnableToVisibilityConverter}}" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Text="清空" />
                                </StackPanel>
                            </Button>

                            <Button
                                Name="BtnClearRxData"
                                Width="60"
                                Height="20"
                                Margin="2,0,2,0"
                                Click="ClearRxData_Click"
                                Style="{StaticResource NoBorderButtonStyle}"
                                Tag="{StaticResource ImgJtUp}">
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <ContentControl Margin="3" Content="{StaticResource ImgJtUp}" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Text="清空" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>
            </DockPanel>
        </Grid>
        <Grid Grid.Row="1" Background="Transparent">
            <StackPanel
                Margin="5,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <ContentControl
                    Width="20"
                    Content="{StaticResource ImgHand2}"
                    RenderTransformOrigin="0.5,0.5">
                    <!--<ContentControl.RenderTransform>
                        <ScaleTransform ScaleX="-1"/>
                    </ContentControl.RenderTransform>-->
                </ContentControl>
                <TextBlock
                    Margin="5,0,0,0"
                    VerticalAlignment="Center"
                    Text="就绪!" />
            </StackPanel>
            <StackPanel
                Margin="0,0,20,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Grid Width="106">
                    <Border BorderBrush="#A0A0A0" BorderThickness="1,1,0,0" />
                    <Border BorderBrush="White" BorderThickness="0,0,1,1" />
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <TextBlock Name="TbRxCount" Text="{Binding RxCount,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type cc:WindowEx}}}" />
                        <TextBlock Text="/" />
                        <TextBlock Name="TbTxCount" Text="{Binding TxCount,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type cc:WindowEx}}}"/>
                    </StackPanel>
                </Grid>
                <Grid Width="106">
                    <Border BorderBrush="#A0A0A0" BorderThickness="1,1,0,0" />
                    <Border BorderBrush="White" BorderThickness="0,0,1,1" />
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <TextBlock Text="RX:" />
                        <TextBlock Name="TbRxNum" Text="{Binding RxNum,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type cc:WindowEx}}}" />
                    </StackPanel>
                </Grid>
                <Grid Width="106">
                    <Border BorderBrush="#A0A0A0" BorderThickness="1,1,0,0" />
                    <Border BorderBrush="White" BorderThickness="0,0,1,1" />
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <TextBlock Text="TX:" />
                        <TextBlock Name="TbTxNum" Text="{Binding TxNum,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type cc:WindowEx}}}" />
                    </StackPanel>
                </Grid>
                <Button Width="58" Content="复位计数" Name="BtnClearCount" Click="BtnClearCount_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</cc:WindowEx>
