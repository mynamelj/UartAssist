    <Style x:Key="UartAssistWindowStyle" TargetType="{x:Type local:WindowEx}">
        <Setter Property="WindowStyle" Value="None" />
        <Setter Property="AllowsTransparency" Value="True" />
        <Setter Property="Background" Value="White" />
        <!--<Setter Property="MinHeight" Value="560" />
        <Setter Property="MinWidth" Value="450" />-->
        <Setter Property="Topmost" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Window">
                    <Border
                        Background="#EFEFEF"
                        BorderBrush="#040205"
                        BorderThickness="1">
                        <DockPanel LastChildFill="True">
                            <Thumb
                                Name="PART_ThumbLeft"
                                Width="3"
                                Background="{StaticResource ThumbLeftBackgroudActived}"
                                Cursor="SizeWE"
                                DockPanel.Dock="Left"
                                Style="{StaticResource SizeThumbStyle}" />
                            <Thumb
                                Name="PART_ThumbTop"
                                Height="3"
                                Background="{StaticResource ThumbTopBackgroudActived}"
                                Cursor="SizeNS"
                                DockPanel.Dock="Top"
                                Style="{StaticResource SizeThumbStyle}" />
                            <Thumb
                                Name="PART_ThumbRight"
                                Width="3"
                                Background="{StaticResource ThumbRightBackgroudActived}"
                                Cursor="SizeWE"
                                DockPanel.Dock="Right"
                                Style="{StaticResource SizeThumbStyle}" />
                            <Thumb
                                Name="PART_ThumbBottom"
                                Height="3"
                                Background="{StaticResource ThumbBottomBackgroudActived}"
                                Cursor="SizeNS"
                                DockPanel.Dock="Bottom"
                                Style="{StaticResource SizeThumbStyle}" />
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="25" />
                                    <RowDefinition />
                                    <!--<RowDefinition Height="25"/>-->
                                </Grid.RowDefinitions>
                                <!--  头部的标题栏  -->
                                <Border
                                    x:Name="PART_TitleBar"
                                    Grid.Row="0"
                                    Padding="0,0,0,2"
                                    BorderBrush="#8A8A8A"
                                    BorderThickness="0,0,0,1"
                                    Cursor="Hand">
                                    <Border>
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                <GradientStop Offset="0" Color="#565557" />
                                                <GradientStop Offset="0.6" Color="#FBFBFB" />
                                                <GradientStop Offset="1" Color="#B4B4B4" />
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="70" />
                                                <ColumnDefinition Width="18" />
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="8" />
                                                <ColumnDefinition Width="80" />
                                            </Grid.ColumnDefinitions>
                                            <Grid Grid.Column="0" Background="Transparent">
                                                <Path
                                                    Margin="-1,0,2,1"
                                                    Data="M51.1,267.8 C51.1,267.8 72.224998,267.8 72.224998,267.8 81.33419,267.83382 81.343223,257.49775 89.124998,256.79999"
                                                    SnapsToDevicePixels="True"
                                                    Stretch="Fill"
                                                    Stroke="White"
                                                    StrokeThickness="2" />
                                                <Path
                                                    Margin="-1,0,0,0"
                                                    Data="M51.1,267.8 C51.1,267.8 72.224998,267.8 72.224998,267.8 81.33419,267.83382 81.343223,257.49775 89.124998,256.79999"
                                                    SnapsToDevicePixels="True"
                                                    Stretch="Fill"
                                                    Stroke="#40423B"
                                                    StrokeThickness="2" />
                                                <ToggleButton
                                                    Name="PART_Menu"
                                                    Margin="0,0,30,0"
                                                    IsChecked="False"
                                                    Style="{StaticResource MenuButtonStyle}" />
                                                <Popup
                                                    x:Name="PART_MenuPopup"
                                                    AllowsTransparency="True"
                                                    IsOpen="{Binding IsChecked, ElementName=PART_Menu, Mode=TwoWay}"
                                                    Placement="Bottom"
                                                    PlacementTarget="{Binding ElementName=PART_Menu}"
                                                    StaysOpen="False">
                                                    <ContentPresenter Content="{TemplateBinding local:WindowEx.Menu}" />
                                                </Popup>
                                            </Grid>
                                            <Border
                                                x:Name="PART_TitleBorder"
                                                Grid.Column="2"
                                                Margin="10,0,10,0"
                                                Background="{StaticResource TitleBackgroudActvied}"
                                                CornerRadius="10">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    FontSize="14"
                                                    Foreground="White"
                                                    Text="{TemplateBinding Title}">
                                                    <TextBlock.Effect>
                                                        <DropShadowEffect ShadowDepth="3" Color="Black" />
                                                    </TextBlock.Effect>
                                                </TextBlock>
                                            </Border>
                                            <CheckBox
                                                Name="PART_CbTopmost"
                                                Grid.Column="3"
                                                Grid.ColumnSpan="2"
                                                IsChecked="{Binding Topmost, Mode=TwoWay, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                                Style="{StaticResource TopmostCheckBoxStyle}" />
                                            <Grid Grid.Column="4">
                                                <Path
                                                    Margin="2,0,-1,1"
                                                    Data="M51.1,267.8 C51.1,267.8 72.224998,267.8 72.224998,267.8 81.33419,267.83382 81.343223,257.49775 89.124998,256.79999"
                                                    RenderTransformOrigin="0.5,0.5"
                                                    SnapsToDevicePixels="True"
                                                    Stretch="Fill"
                                                    Stroke="White"
                                                    StrokeThickness="2">
                                                    <Path.RenderTransform>
                                                        <ScaleTransform ScaleX="-1" />
                                                    </Path.RenderTransform>
                                                </Path>
                                                <Path
                                                    Margin="0,0,-1,0"
                                                    Data="M51.1,267.8 C51.1,267.8 72.224998,267.8 72.224998,267.8 81.33419,267.83382 81.343223,257.49775 89.124998,256.79999"
                                                    RenderTransformOrigin="0.5,0.5"
                                                    SnapsToDevicePixels="True"
                                                    Stretch="Fill"
                                                    Stroke="#40423B"
                                                    StrokeThickness="2">
                                                    <Path.RenderTransform>
                                                        <ScaleTransform ScaleX="-1" />
                                                    </Path.RenderTransform>
                                                </Path>
                                                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                                    <Button
                                                        x:Name="PART_BtnMini"
                                                        Content="{StaticResource DiMiniButton}"
                                                        Style="{StaticResource WindowButtonStyle}" />
                                                    <Button
                                                        x:Name="PART_BtnMax"
                                                        Content="{StaticResource DiMaxButton}"
                                                        Style="{StaticResource WindowButtonStyle}" />
                                                    <Button
